# Set the modifier to super
set $mod Mod4
set $scripts $HOME/scripts

font pango: Fira Code Bold 8
font pango: UW ttyp0 11
floating_modifier $mod

bindsym $mod+Return exec kitty
bindsym $mod+q kill
bindsym $mod+Shift+c reload
bindsym $mod+space exec rofi -show run
bindsym $mod+Shift+r restart
bindsym $mod+o split h
bindsym $mod+v split v

# Window modes
bindsym $mod+f fullscreen toggle
bindsym $mod+t layout default
bindsym $mod+s layout stacking
#bindsym $mod+b layout tabbed
bindsym $mod+Shift+space floating toggle

bindsym $mod+i exec --no-startup-id display_info

# Navigation keybindings
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+a focus parent

# Move windows
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Switch to workspace
bindsym $mod+1 exec $scripts/changeWorkspace.sh 0
bindsym $mod+2 exec $scripts/changeWorkspace.sh 1
bindsym $mod+3 exec $scripts/changeWorkspace.sh 2
bindsym $mod+4 exec $scripts/changeWorkspace.sh 3

# Move focused container to workspace
bindsym $mod+Shift+1 exec $scripts/moveToWorkspace.sh 0
bindsym $mod+Shift+2 exec $scripts/moveToWorkspace.sh 1
bindsym $mod+Shift+3 exec $scripts/moveToWorkspace.sh 2
bindsym $mod+Shift+4 exec $scripts/moveToWorkspace.sh 3


client.focused          #999999 #999999 #ffffff #ffffff
client.focused_inactive #787878 #787878 #ffffff #ffffff
client.background       #999999
client.unfocused        #585858 #585858 #ffffff #ffffff
client.placeholder      #585858 #585858 #585858 #585858

client.focused #333030 #403d3d #e8e8e8 #333030 #333030
client.focused_inactive #333030 #403d3d #a6a9ab #333030 #333030
client.unfocused #333030 #403d3d #a6a9ab #333030 #333030

# move focused window to scratchpad
bindsym $mod+Shift+x exec $scripts/minimize.sh

# restor window from scratchpad
mode "restore" {
        bindsym 1 exec $scripts/restore.sh 0; mode "default"
        bindsym 2 exec $scripts/restore.sh 1; mode "default"
        bindsym 3 exec $scripts/restore.sh 2; mode "default"
        bindsym 4 exec $scripts/restore.sh 3; mode "default"
        bindsym 5 exec $scripts/restore.sh 4; mode "default"
        bindsym 6 exec $scripts/restore.sh 5; mode "default"
        bindsym 7 exec $scripts/restore.sh 6; mode "default"
        bindsym 8 exec $scripts/restore.sh 7; mode "default"
        bindsym 9 exec $scripts/restore.sh 8; mode "default"
        bindsym 10 exec $scripts/restore.sh 9; mode "default"

        bindsym x exec $scripts/restore.sh last; mode "default"
        bindsym $mod+x exec $scripts/restore.sh last; mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+x mode "restore"

# Resize window (you can also use the mouse for that)
mode "resize" {
        bindsym h resize shrink width 1 px or 1 ppt
        bindsym j resize grow height 1 px or 1 ppt
        bindsym k resize shrink height 1 px or 1 ppt
        bindsym l resize grow width 1 px or 1 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}


bindsym $mod+r mode "resize"
bindsym $mod+Tab exec rofi -show window
bindsym $mod+d exec ~/scripts/display_time
focus_wrapping false

# Window appearance
gaps inner 10
gaps outer 20
dumb_gaps yes

#for_window [class="^.*"] normal 1
#for_window [class="^.*"] title_format " %title"
for_window [class=".*"] title_format "<span font='8'> %title </span>"

# Audio keybindings
bindsym XF86AudioMute exec --no-startup-id mute_volume
bindsym XF86AudioLowerVolume exec --no-startup-id lower_volume
bindsym XF86AudioRaiseVolume exec --no-startup-id raise_volume

# Brightness keybindings
bindsym XF86MonBrightnessDown exec --no-startup-id decrease_brightness
bindsym XF86MonBrightnessUp exec --no-startup-id increase_brightness

exec --no-startup-id $scripts/autostart.sh
