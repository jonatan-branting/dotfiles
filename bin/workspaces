#!/bin/bash

focused="%{U#90ff5f5f+u}----------%{U-}"
normal="%{U#65888888+u}----------%{U-}"
active="%{U#90bbbbbb+u}----------%{U-}"

desktops() {
    desktops=""
    for e in $(echo $1 | cut -d':' -f2-5 | tr ':' '\n')
    do
        if [ "${e:0:1}" == "O" ]; then
            desktops="$desktops $focused"
        elif [ "${e:0:1}" == "F" ]; then
            desktops="$desktops $focused"
        elif [ "${e:0:1}" == "o" ]; then
            desktops="$desktops $active"
        else
            desktops="$desktops $normal"
        fi
    done
    echo $desktops
}

bspc control --subscribe | \
while read -r line ; do

    # skip messages for other monitors
    [ $( echo $line | grep "^WM$MONITOR" ) ] || continue

    output=$(desktops $line)
    echo "$output%{c}"
done | bar-aint-recursive -bp -g "260x8" -u 6 -F "#00000000" -B "#00000000"
