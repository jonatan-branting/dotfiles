#! /bin/sh

bspc monitor -d 1 2 3 4

# Add padding for bar
for p in "top 0" "right 0" "bottom 0" "left 0" ; do
	bspc config -m focused ${p% *}_padding ${p#* }
done

bspc config -m eDP1 border_width          6
bspc config -m eDP1 window_gap            9
bspc config -m eDP1 split_ratio           0.50
bspc config -m eDP1 borderless_monocle    true
bspc config -m eDP1 gapless_monocle       true
bspc config -m eDP1 auto_alternate        true
bspc config -m eDP1 auto_cancel           true
bspc config -m eDP1 focus_follows_pointer true
bspc config -m eDP1 focused_border_color "#ffffff"
bspc config -m eDP1 normal_border_color  "#999999"

bspc rule -a Gimp desktop=^8 follow=on floating=on
bspc rule -a intellij-rt-execution-application-AppMain floating=on
wmname LG3D
workspaces &
