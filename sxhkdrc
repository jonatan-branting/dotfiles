#
# bspwm hotkeys
#

super + alt + Escape
    bspc quit

super + q
    bspc window -c

super + t
    bspc desktop -l next

super + b
    bspc desktop -E

super + r
	bspc desktop -R 90

super + {s,f}
    bspc window -t {floating,fullscreen}

super + {grave,Tab}
    bspc {window,desktop} -f last

super + {o,i}
    bspc control --record-history off; \
    bspc window {older,newer} -f; \
    bspc control --record-history on

super + y
    bspc window -w last.manual

super + m
    bspc window -s biggest

super + {_,shift + }{h,j,k,l}
    bspc window -{f,s} {left,down,up,right}

super + {_,shift + }c
    bspc window -f {next,prev}

super + {comma,period}
    bspc desktop -C {backward,forward}

super + {Left,Right}
    bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
    bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
    bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
    bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
    bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,10}

~button1
    bspc pointer -g focus

super + button1
    bspc pointer -g resize_side

super + ctrl + button1
    bspc pointer -g move

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u

#
# wm independent hotkeys
#

super + Return
    urxvtc -e fish

super + e
    emc

super + shift + Return
    bspc rule -a urxvt floating=on && urxvtc -e fish -c "set IS_PROMPT 1"

super + space
 rofi -show run -fg "#505050" -bg "#eeeeee" -hlfg "#505050" -hlbg "#dddddd" -opacity 98 -sidebar-mode -bw 0 -scrollbar-width 0 -threads 4 -font "Ubuntu Mono 14" -lines 5 -width 30 -separator-style none -sidebar-mode -yoffset -440

    

super + Escape
# make sxhkd reload its configuration files:
    pkill -USR1 -x sxhkd

super + d
    ~/scripts/display_time

XF86AudioLowerVolume
    ~/scripts/lower_volume

XF86AudioRaiseVolume
    ~/scripts/raise_volume

XF86AudioMute
    ~/scripts/mute_volume

XF86MonBrightnessDown
    ~/scripts/decrease_brightness

super + {z,x}
    {~/scripts/increase_brightness, ~/scripts/decrease_brightness}

XF86MonBrightnessUp
    ~/scripts/increase_brightness
